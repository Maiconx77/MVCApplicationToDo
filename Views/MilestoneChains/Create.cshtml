@model MVCApplicationToDo.Models.MilestoneChain

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MilestoneChain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h4>Steps</h4>

<table class="table col-md-12">
    <thead>
        <tr>
            <th class="col-md-1 text-center">Step</th>
            <th class="col-md-6 text-center">Título</th>
            <th class="col-md-1 text-center">Progresso</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Milestones.Count; i++)
        {
            <tr>
                <td class="col-md-1">
                    <div class="form-group">
                        @Html.EditorFor(model => model.Milestones[i].Code, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td class="col-md-6">
                    <div class="form-group">
                        @Html.EditorFor(model => model.Milestones[i].Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
                <td class="col-md-1">
                    <div class="form-group">
                        @Html.EditorFor(model => model.Milestones[i].Value, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
