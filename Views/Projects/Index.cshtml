@model IEnumerable<MVCApplicationToDo.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (ViewBag.SelectedProjectId != null && ViewBag.SelectedProjectTitle != null)
{
    <div style="margin-bottom: 15px; color: green;">
        <p>Projeto Selecionado: @ViewBag.SelectedProjectId</p>
        <p>Título: @ViewBag.SelectedProjectTitle</p>
    </div>
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Select" asp-route-id="@item.Id">Select</a>
            </td>
        </tr>
}
    </tbody>
</table>
