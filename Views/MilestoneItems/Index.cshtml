@model List<MVCApplicationToDo.Models.MilestoneItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Milestones Index</h1>

@if (ViewBag.SelectedProjectId != null && ViewBag.SelectedProjectTitle != null)
{
    <div class="container">
        <p>Projeto Selecionado: @ViewBag.SelectedProjectTitle</p>
    </div>
}

<p>
    <a asp-action="Create">Create New</a> |
    <a asp-action="CreateMultiple" asp-route-id="@ViewBag.SelectedProjectId">Create Multiples</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Code
            </th>
            <th>
                Title
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
